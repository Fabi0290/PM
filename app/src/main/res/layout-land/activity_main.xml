<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="15dp">



    <Button
        android:id="@+id/idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="ING | PT"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/name"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

  <ImageButton
      android:id="@+id/log"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/img"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:layout_alignParentEnd="true"
      android:scaleType="fitCenter"
      android:onClick="login"
      />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/icon2"
        android:layout_below="@+id/idioma"
        />

    <LinearLayout
        android:id="@+id/linearl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/img1"
        android:layout_toRightOf="@+id/img1"
        >
        <Button
            android:id="@+id/vermapa"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:backgroundTint="@color/black"
            android:layout_centerHorizontal="true"
            android:text="@string/mapa_entrar"
            android:onClick="mapa"
            />

        <Button
            android:id="@+id/verempresa"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/vermapa"
            android:backgroundTint="@color/black"
            android:layout_centerHorizontal="true"
            android:text="@string/empresas"
            android:onClick="empresas"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/criar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foot1"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="termos"
        />

</RelativeLayout>
