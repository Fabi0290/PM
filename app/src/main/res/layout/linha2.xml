<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linha2"
    android:layout_margin="5dp"
    android:background="@drawable/list"
    android:elevation="50dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/cursos_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Engenha"
        android:textSize="18sp"
        android:paddingEnd="30dp" />

    <TextView
        android:id="@+id/cursos_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cursos_name"
        android:textStyle="bold"
        android:text="Ciencias e tecnologia" />

    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cursos_desc"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <!-- Container para os textos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cordenador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Sergio" />

            <TextView
                android:id="@+id/num_alunos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="10" />

            <TextView
                android:id="@+id/setor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tecnologia" />
        </LinearLayout>

        <!-- Botão à direita -->
        <Button
            android:id="@+id/btn_empresas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Empresas"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:background="?attr/selectableItemBackground"
            android:textColor="@android:color/black"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:onClick="irEmpresas" />
    </LinearLayout>

</RelativeLayout>