<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linha2"
    android:layout_margin="5dp"
    android:background="@drawable/list"
    android:elevation="50dp"
    >


    <TextView
        android:id="@+id/cursos_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Engenha"
        android:textSize="18dp"
        android:paddingEnd="30dp"
        />

    <TextView
        android:id="@+id/cursos_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cursos_name"
        android:textStyle="bold"
        android:text="Ciencias e tecnologia"
        />

    <Button
        android:id="@+id/btn_mais"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/ver"
        android:contentDescription="@string/saber"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />


    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_mais"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/cursos_empresas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="14.5" />

        <Button
            android:id="@+id/btn_empresas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="irEmpresas"
            android:layout_marginEnd="16dp" />
    </LinearLayout>



</RelativeLayout>